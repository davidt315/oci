# syntax=docker/dockerfile:1
# Currently there are only amd64 packages, so we install via python for now
ARG CONTAINER_REGISTRY=docker.io
FROM $CONTAINER_REGISTRY/ubuntu:jammy-20230425 as builder

WORKDIR /tmp

SHELL ["/bin/bash", "-o", "pipefail", "-c"]
RUN <<EOF
  apt-get update
  apt-get install -y --no-install-recommends \
    ca-certificates \
    curl
  dpkgArch="$(dpkg --print-architecture)"
  case "${dpkgArch##*-}" in \
    amd64) \
      GLAB_URL=https://gitlab.com/gitlab-org/cli/-/releases/v1.30.0/downloads/glab_1.30.0_Linux_x86_64.deb \ 
      GLAB_SHA256=efb0ecfca83231f9daf044999080c80ffef315e647588c6aaada92a04a49df76 \
      ;; \
    arm64) \
      GLAB_URL=https://gitlab.com/gitlab-org/cli/-/releases/v1.30.0/downloads/glab_1.30.0_Linux_arm64.deb \
      GLAB_SHA256=5403d82c9f81ce6c86d3bd91216dd647f031a70fffc89a23347972454f5ca4b8 \
      ;; \
    armhf) \
      GLAB_URL=https://gitlab.com/gitlab-org/cli/-/releases/v1.30.0/downloads/glab_1.30.0_Linux_arm.deb \
      GLAB_SHA256=95a1b056eb28c2c49a69933cf757a5c22d04d60f3df3532194cd258ec318bf78 \
      ;;
    *) echo "unsupported architecture"; exit 1 ;; \
  esac 
  curl -fsSL -o glab.deb ${GLAB_URL}
  echo "${GLAB_SHA256} glab.deb" | sha256sum -c -
EOF

RUN <<EOF
  dpkgArch="$(dpkg --print-architecture)"
  case "${dpkgArch##*-}" in \
    amd64) \
      DOCKER_URL='https://download.docker.com/linux/static/stable/x86_64/docker-24.0.2.tgz' \
      ;; \
    arm64) \
      DOCKER_URL='https://download.docker.com/linux/static/stable/aarch64/docker-24.0.2.tgz' \
      ;;
    armhf) \
      DOCKER_URL='https://download.docker.com/linux/static/stable/armhf/docker-24.0.2.tgz' \
      ;;
    *) echo "unsupported architecture"; exit 1 ;; \
  esac
  curl -fsSL -o docker.tgz  ${DOCKER_URL}
  tar --extract \
		--file docker.tgz \
		--strip-components 1 \
		--directory /usr/local/bin/ \
		--no-same-owner \
		'docker/docker'
  docker --version 
EOF

ARG USERNAME=glab
ARG USER_UID=1000
ARG USER_GID=$USER_UID
ENV HOME /home/$USERNAME

FROM $CONTAINER_REGISTRY/ubuntu:jammy-20230425

LABEL \
    org.opencontainers.image.source="https://github.com/polymathrobotics/oci" \
    org.opencontainers.image.licenses="Apache-2.0" \
    org.opencontainers.image.description="The GitLab CLI tool."

COPY --from=builder /tmp/glab.deb /tmp/glab.deb
COPY --from=builder /usr/local/bin/docker /usr/local/bin/docker
COPY entrypoint.sh /entrypoint.sh

RUN <<EOF
  groupadd --gid "$USER_GID" "$USERNAME"
  useradd --uid "$USER_UID" --gid "$USER_GID" -m "$USERNAME"
  mkdir -p "/home/$USERNAME/.config"
  apt-get update
  apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    jq \
    openssh-client
  dpkg -i /tmp/glab.deb
  rm -rf /var/lib/apt/lists/*
EOF

ENTRYPOINT ["/entrypoint.sh"]
USER $USERNAME
WORKDIR $HOME
CMD [ "-h" ]

