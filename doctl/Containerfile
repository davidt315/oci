# syntax=docker/dockerfile:1
ARG BASE_IMAGE=docker.io/ubuntu:jammy-20240808
FROM $BASE_IMAGE AS base

FROM base AS download

ARG DOCTL_URL_AMD64="https://github.com/digitalocean/doctl/releases/download/v1.111.0/doctl-1.111.0-linux-amd64.tar.gz"
ARG DOCTL_SHA256_AMD64="85abc391224c192cd351c16cde2e7092607650089de3f3aa4f2571d7074bdee6"
ARG DOCTL_URL_ARM64="https://github.com/digitalocean/doctl/releases/download/v1.111.0/doctl-1.111.0-linux-arm64.tar.gz"
ARG DOCTL_SHA256_ARM64="311ba00493cf2547c33b9564fe394e05ea04a6176967bff776f6d46b36923bcf"

SHELL ["/bin/bash", "-o", "pipefail", "-c"]
RUN <<EOF
  apt-get update
  DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    ca-certificates \
    curl
  dpkgArch="$(dpkg --print-architecture)"
  case "${dpkgArch##*-}" in \
    amd64) \
      DOCTL_URL="$DOCTL_URL_AMD64" \
      DOCTL_SHA256="$DOCTL_SHA256_AMD64" \
      ;; \
    arm64) \
      DOCTL_URL="$DOCTL_URL_ARM64" \
      DOCTL_SHA256="$DOCTL_SHA256_ARM64" \
      ;; \
    *) echo "unsupported architecture"; exit 1 ;; \
  esac
  curl -fsSL -o /tmp/doctl.tar.gz ${DOCTL_URL}
  echo "${DOCTL_SHA256} /tmp/doctl.tar.gz" | sha256sum -c -
  mkdir -p /tmp/doctl
  tar xvf /tmp/doctl.tar.gz -C /tmp/doctl
EOF

FROM base

RUN <<EOF
  apt-get update -y
  apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    jq \
    openssh-client
  apt-get autoremove -y
  rm -rf /var/lib/apt/lists/*
EOF

WORKDIR /app
COPY --from=download /tmp/doctl/doctl /usr/local/bin/doctl

ENTRYPOINT ["/usr/local/bin/doctl"]
